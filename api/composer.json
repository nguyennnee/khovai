{
    "name": "lilshunshine/thrift-api",
    "description": "API backend for Lil Sunshine Thrift Shop",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Lil Sunshine Team",
            "email": "dev@lilshunshine.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "migrate": "php database/migrate.php",
        "serve": "php -S localhost:8000 -t ."
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
